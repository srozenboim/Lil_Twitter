<div>
    <br><br>  <p><%= @user.username %></p>
    <form class="follow button" action="/user/<%= @user.id %>/follow" method="post">
        <input type="hidden" name="_method" value="like">
        <input type="submit" value="follow <%= @user.username %>" class="user-follow"><br><br>
    </form>
    <ul>
      <% @posts.each do |post| %>
      <li><%= post.body %>
      <%= post.created_at %></li>
      <% end %>
    </ul>

    </div>
